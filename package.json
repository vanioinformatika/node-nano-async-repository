{
    "name": "nano-async-repository",
    "version": "1.0.2",
    "author": "Kovács Vince <vincekovacs@hotmail.com>",
    "license": "MIT",
    "contributors": [
        {
            "name": "Gyula Szalai",
            "email": "gyszalai@gmail.com"
        },
        {
            "name": "Kovács Vince",
            "email": "vincekovacs@hotmail.com"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vanioinformatika/node-nano-async-repository.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">6.9"
    },
    "scripts": {
        "changelog:bump": "cross-env-shell sed -i '7a # $npm_package_version\\n' ./CHANGELOG.md",
        "compile": "tsc",
        "coverage": "nyc npm run test",
        "coverage:ci": "npm run coverage && nyc report --reporter=text-lcov | coveralls",
        "test": "mocha --require ts-node/register src/**/*.spec.ts",
        "lint": "npm run lint:ts",
        "lint:ts": "tslint --type-check --project . src/**/*.ts",
        "preversion": "git push && npm test",
        "version": "npm run compile && npm run changelog:bump && git add ./CHANGELOG.md && git add -A dist",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "@types/invariant": "^2.2.29",
        "@types/request": "^2.0.3",
        "invariant": "^2.2.2",
        "nano-async": "^1.0.3",
        "request": "^2.81.0"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/mocha": "^2.2.42",
        "chai": "^4.1.2",
        "cross-env": "^5.0.5",
        "mocha": "^3.5.0",
        "nyc": "^11.2.1",
        "ts-node": "^3.3.0",
        "tslint": "^5.7.0",
        "typescript": "^2.5.2"
    }
}
